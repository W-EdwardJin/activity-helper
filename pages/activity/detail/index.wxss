.container {
  padding-bottom: 100px;
  background-color: #ffffff;
}

.activity-cover {
  width: 100%;
  height: 240px;
  background-color: #f5f5f5;
}

.activity-info {
  padding: 20px;
  background-color: #fff;
  margin-bottom: 12px;
}

.activity-title {
  font-size: 20px;
  font-weight: bold;
  color: #333;
  margin-bottom: 16px;
}

.description-section,
.participants-section {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.participants-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 20rpx;
  margin-bottom: 160rpx;
}

.participant-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.participant-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.participant-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.description-content {
  font-size: 14px;
  color: #666;
  line-height: 1.6;
}

.participants-list {
  margin-top: 8px;
}

.bottom-button-container {
  position: fixed;
  bottom: env(safe-area-inset-bottom, 0);
  left: 0;
  right: 0;
  padding: 16px;
  padding-bottom: calc(16px + env(safe-area-inset-bottom, 0));
  background-color: #fff;
  box-shadow: 0 -2px 6px rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.join-button {
  width: 60%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  background: linear-gradient(to right, #ff9933, #ff6600);
  border: none;
  margin: 0 auto;
  display: block;
}

.join-button.joined {
  background: #cccccc;
  background-image: none;
}

.loading {
  padding: 32px 0;
  text-align: center;
}