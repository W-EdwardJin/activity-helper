.container {
  padding-bottom: 100px;
  background-color: #ffffff;
}

.activity-cover {
  width: 100%;
  height: 240px;
  background-color: #f5f5f5;
}

.activity-info {
  padding: 20px;
  background-color: #fff;
  margin-bottom: 12px;
}

.activity-title {
  font-size: 20px;
  font-weight: bold;
  color: #333;
  margin-bottom: 16px;
}

.description-section,
.participants-section {
  margin-top: 20px;
  background-color: #fff;
  padding: 16px;
  border-radius: 8px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 12px;
  padding-left: 8px;
  border-left: 4px solid #1296db;
}

.description-content {
  font-size: 14px;
  color: #666;
  line-height: 1.6;
}

.participants-list {
  margin-top: 8px;
}

.participant-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 12px;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16px;
  background-color: #fff;
  box-shadow: 0 -2px 6px rgba(0, 0, 0, 0.1);
}

.join-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  background: linear-gradient(to right, #ff9933, #ff6600);
  border: none;
}

.loading {
  padding: 32px 0;
  text-align: center;
}