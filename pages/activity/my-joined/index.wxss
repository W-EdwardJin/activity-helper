.container {
  padding: 20rpx;
}

.activity-list {
  width: 100%;
}

.activity-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.activity-content {
  display: flex;
  margin-bottom: 20rpx;
}

.activity-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  object-fit: cover;
  object-position: center;
}

.activity-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.activity-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.activity-time,
.activity-location,
.activity-participants,
.enrollment-status {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.enrollment-status {
  color: #1aad19;
}

.activity-actions {
  display: flex;
  justify-content: flex-end;
}

.cancel-btn {
  background: #ff4d4f;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 6rpx;
  border: none;
}

.loading-more,
.no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.browse-btn {
  background: #1aad19;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 60rpx;
  border-radius: 8rpx;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}