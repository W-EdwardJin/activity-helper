.container {
  padding: 16px;
  padding-top: 24px;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.van-cell-group {
  margin-bottom: 16px;
  border-radius: 12px;
  overflow: hidden;
}

.upload-section {
  margin-bottom: 16px;
  padding: 16px;
  background-color: #fff;
  border-radius: 0 0 12px 12px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  margin-bottom: 0;
  font-size: 15px;
  color: #333;
  font-weight: 500;
}

.module-group {
  margin-bottom: 24px;
  background-color: #fff;
  border-radius: 12px;
  overflow: hidden;
}

.module-title {
  display: flex;
  align-items: center;
  padding: 16px;
  font-size: 15px;
  color: #333;
  font-weight: 500;
  background-color: #fff;
}

.module-title van-icon {
  margin-right: 6px;
  color: #007aff;
}

.module-title text {
  font-size: 15px;
}

/* 自定义表单样式 */
.van-field__label {
  width: 90px !important;
  color: #333 !important;
  font-size: 15px !important;
}

.van-cell__title {
  flex: none !important;
}

.van-field__input {
  color: #333 !important;
  font-size: 15px !important;
}

.van-field__placeholder {
  color: #999 !important;
  font-size: 15px !important;
}

/* 文本域样式 */
.van-field__body--textarea {
  min-height: 80px;
}

.submit-btn {
  padding: 16px;
  margin-top: 0;
}

.wechat-icon {
  width: 20px;
  height: 20px;
  margin-right: 8px;
  vertical-align: middle;
}

.submit-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 44px;
  border-radius: 10px;
  color: #ffffff;
  font-size: 16px;
  font-weight: 500;
  background: #07C160;
  border: none;
}

.submit-button:active {
  background: #0066D6;
  transform: scale(0.98);
}

/* 上传组件样式 */
.van-uploader__upload {
  border-radius: 8px !important;
  background-color: #f5f5f5 !important;
}

.van-uploader__preview-image {
  border-radius: 8px !important;
}

/* 选择器样式 */
.van-picker__confirm {
  color: #007AFF !important;
}

.van-picker__cancel {
  color: #999 !important;
}