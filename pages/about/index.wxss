.container {
  padding: 0;
  background-color: #ffffff;
  min-height: 100vh;
  font-family: -apple-system, system-ui, BlinkMacSystemFont, "Helvetica Neue", "PingFang SC", "Microsoft YaHei", "Source Han Sans SC", "Noto Sans CJK SC", "WenQuanYi Micro Hei", sans-serif;
}

.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 0;
  background-color: #ffffff;
}

.logo {
  width: 100px;
  height: 100px;
  margin-bottom: 20px;
  border-radius: 22px;
}

.app-name {
  font-size: 28px;
  font-weight: 600;
  color: #1d1d1f;
  letter-spacing: -0.5px;
}

.description {
  font-size: 17px;
  color: #86868b;
  line-height: 1.5;
  padding: 12px 20px;
  text-align: center;
}

.qr-code {
  width: 88px;
  height: 88px;
  border-radius: 12px;
}

.version-info {
  text-align: center;
  padding: 20px 0;
  color: #86868b;
  font-size: 13px;
}

.powered-by {
  text-align: center;
  padding: 12px 0 24px;
  color: #86868b;
  font-size: 12px;
  letter-spacing: 0.2px;
}

van-cell-group {
  margin: 12px 16px;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}