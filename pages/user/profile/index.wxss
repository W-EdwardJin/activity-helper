.container {
  padding: 20rpx;
}

.profile-section,
.edit-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.avatar-btn {
  font-size: 28rpx;
  color: #1aad19;
  background: none;
  border: none;
  padding: 0;
}

.info-section,
.form-section {
  margin-bottom: 30rpx;
}

.info-item,
.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.action-section {
  display: flex;
  justify-content: center;
  gap: 20rpx;
}

.edit-btn,
.save-btn {
  background: #1aad19;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  border-radius: 8rpx;
  border: none;
}

.cancel-btn {
  background: #999;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  border-radius: 8rpx;
  border: none;
}

.avatar-btn::after,
.edit-btn::after,
.save-btn::after,
.cancel-btn::after {
  border: none;
}