.loading-spinner {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 999;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 20px;
  min-height: 100vh;
  background-color: #ffffff;
}

.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80px;
  margin-bottom: 100px;
}

.logo {
  width: 240px;
  height: 240px;
  margin-bottom: -40px;
  border-radius: 28px;
}

.title {
  font-size: 28px;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12px;
}

.subtitle {
  font-size: 16px;
  color: #999999;
}

.login-section {
  width: 100%;
  padding: 0 32px;
}

.wechat-login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 48px;
  background-color: #07C160;
  color: #ffffff;
  font-size: 16px;
  font-weight: 500;
  border-radius: 24px;
  border: none;
  margin-bottom: 24px;
  box-shadow: 0 4px 8px rgba(7, 193, 96, 0.2);
}

.wechat-login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2px 4px rgba(7, 193, 96, 0.2);
}

.wechat-icon {
  width: 24px;
  height: 24px;
  margin-right: 8px;
}

.agreement-text {
  font-size: 13px;
  color: #999999;
  text-align: center;
  margin-top: 32px;
  line-height: 1.5;
}

.link {
  color: #07C160;
  display: inline;
}

.wechat-login-btn[disabled] {
  opacity: 0.6;
  background-color: #999999;
  box-shadow: none;
}